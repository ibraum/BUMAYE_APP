<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="?attr/colorOnPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_bottom"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Bouton retour -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_chevron_left_24"
            android:contentDescription="@string/back" />

        <!-- Titre de la page -->
        <TextView
            android:id="@+id/tvPageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/client_details"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Icône mise à jour -->
        <ImageButton
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_create_24"
            android:contentDescription="@string/update"
            android:layout_marginEnd="8dp" />

        <!-- Icône suppression -->
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_delete_outline_24"
            android:contentDescription="@string/delete" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="245dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/radius_black"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="15dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/identity"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_marginBottom="14dp"
                        android:textColor="@color/white"
                        tools:ignore="SmallSp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_black"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_height="24dp"
                            android:layout_width="24dp"
                            android:src="@drawable/man_head"
                            android:contentDescription="@string/man_head"
                            android:textColor="@color/spotify_green"
                            app:tint="@color/white" />
                        <TextView
                            android:id="@+id/tvFirstNameValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/identity"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tvLastNameValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/identity"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_marginBottom="14dp"
                            android:textColor="@color/white" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_black"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageView
                            android:layout_height="24dp"
                            android:layout_width="24dp"
                            android:src="@drawable/baseline_call_24"
                            android:contentDescription="@string/phone_img"
                            android:textColor="@color/spotify_green" />
                        <TextView
                            android:id="@+id/tvPhoneValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/identity"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:gravity="center|bottom"
                            android:textColor="?attr/colorPrimary" />
                    </LinearLayout>
 </LinearLayout>

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:background="@drawable/radius_white"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_date_label"
                            android:textStyle="bold"
                            android:textSize="10sp"
                            android:gravity="center|bottom"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/spotify_green"
                            tools:ignore="SmallSp" />
                        <TextView
                            android:id="@+id/tvOrderDateValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_date_value"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:gravity="center|bottom"
                            android:layout_marginBottom="5sp"
                            android:textColor="@color/spotify_black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivered_date_label"
                            android:textStyle="bold"
                            android:textSize="10sp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center|bottom"
                            android:textColor="@color/spotify_green"
                            tools:ignore="SmallSp" />
                        <TextView
                            android:id="@+id/tvDeliveryDateValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivered_date_value"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:gravity="center|bottom"
                            android:textColor="@color/spotify_black" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/radius_primary"
                        android:orientation="vertical"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="10dp"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/payment"
                            android:textStyle="bold"
                            android:textSize="10sp"
                            android:gravity="center|bottom"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/white"
                            tools:ignore="SmallSp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/radius_primary"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/paid"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:gravity="center|bottom"
                                android:layout_marginBottom="15sp"
                                android:textColor="@color/spotify_black" />
                            <TextView
                                android:id="@+id/tvAdvanceValue"                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/paid_value"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:gravity="center|bottom"
                                android:layout_marginBottom="15sp"
                                android:textColor="@color/spotify_black" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/radius_primary"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/remainder_label"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_marginBottom="15sp"
                                android:textColor="@color/spotify_black" />
                            <TextView
                                android:id="@+id/tvRemainderValue"                                android:layout_height="wrap_content"
                                android:text="@string/remainder_value"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:gravity="center|bottom"
                                android:layout_marginBottom="15sp"
                                android:textColor="@color/spotify_black"
                                android:layout_width="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center">
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="7dp"
                    android:background="@drawable/radius_black"
                    android:gravity="center" />
            </LinearLayout>

            <!-- ===== Section: Measures ===== -->
            <TextView
                android:id="@+id/sectionMeasures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/measures"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:layout_marginTop="15dp"
                android:textColor="?attr/colorPrimary" />

            <!-- Helper to reduce repitition: each row label left, value right -->

            <!-- Shoulder -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext">

                <TextView
                    android:id="@+id/tvShoulderLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/shoulder"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvShoulderValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Chest -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvChestLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/chest"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvChestValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Length waist -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvLengthWaistLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/length_waist"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvLengthWaistValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Ventral turn -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvVentralTurnLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ventral_turn"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvVentralTurnValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Hip -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvHipLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/hip"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvHipValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Bodice length -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvBodiceLengthLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bodice_length"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvBodiceLengthValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Belt -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvBeltLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/belt"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvBeltValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Skirt length -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvSkirtLengthLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/skirt_length"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvSkirtLengthValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Dress length -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvDressLengthLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dress_length"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvDressLengthValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Sleeve length -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvSleeveLengthLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sleeve_length"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvSleeveLengthValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Sleeve size -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvSleeveSizeLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sleeve_size"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvSleeveSizeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Pants length -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvPantsLengthLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pants_length"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvPantsLengthValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Short dress length -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvShortDressLengthLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/short_dress_length"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvShortDressLengthValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Thigh circumference -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvThighCircumferenceLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/thigh_circumference"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvThighCircumferenceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Knee length -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvKneeLengthLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/knee_length"
                    android:textColor="#555555"
                    tools:ignore="TooManyViews" />

                <TextView
                    android:id="@+id/tvKneeLengthValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Knee circumference -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvKneeCircumferenceLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/knee_circumference"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvKneeCircumferenceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Bottom -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvBottomLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bottom"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvBottomValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Other measures -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvOtherMeasuresLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/other_measures"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvOtherMeasuresValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#E0E0E0" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#E0E0E0" />

            <!-- ===== Section: Payment ===== -->
            <TextView
                android:id="@+id/sectionPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/payment"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:textColor="?attr/colorPrimary" />

            <!-- Total amount -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/rounded_editext">

                <TextView
                    android:id="@+id/tvTotalAmountLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/total_amount"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvTotalAmountValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nothing"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
